@model CrudApp.Models.Note

<h1>Delete Note</h1>

<h3>Are you sure you want to delete this note?</h3>
<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
